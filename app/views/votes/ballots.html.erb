<% content_for :title, "Ballots" %>

<p id="notice"><%= notice %></p>

<%= link_to admin_candidates_path, class: "ui button" do %>
  <i class="street view icon"></i> Candidates
<% end %>

<%= link_to "#", class: "ui button" do %>
  <i class="table icon"></i> Ballots
<% end %>

<%= link_to admin_path, class: "ui button" do %>
  <i class="clipboard icon"></i> Results
<% end %>


<!--<h1>View All Ballots</h1>-->
<% if @ballots != [] %>
<% @ballots.each do |ballot| %>
<table class="ui table">
  <thead>
    <tr>
      <th>Preference</th>
      <th>Candidateid</th>
      <th>Ballotid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% ballot.each do |vote| %>
      <tr>
        <td><%= vote.preference %></td>
        <td><%= vote.candidateid %></td>
        <td><%= vote.ballotid %></td>
<!--        <td><%#= link_to 'Show', vote %></td>-->
<!--        <td><%#= link_to 'Edit', edit_vote_path(vote) %></td>-->
        <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <% end %>
  <% end %>

