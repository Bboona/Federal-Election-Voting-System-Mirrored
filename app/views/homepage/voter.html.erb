<style>

    .voteoption {
        width: 10em;
        height: 25px;
        position: relative;
        background: black;
        padding: 0px 0px 0px 0px;
    }
    .voteoption:before {
        content: "";
        position: absolute;
        right: -20px;
        bottom: 0;
        width: 0;
        height: 0;
        border-left: 20px solid black;
        border-top: 12.5px solid transparent;
        border-bottom: 12.5px solid transparent;
    }
    .voteoption-text {
        color: white;
        font-size: 1.5em;
        font-weight: bold;
    }

    .option-a{
        border-bottom: 15px solid black
    }
    .ballot-col{
        border-left: 1px solid black;
        padding: 3px;
    }
    select{
        background-color: white;
        height: 40px;
        width: 40px;
        /*float: left;*/
        border: 2px solid #000;
        font-size: 1.4em;
        text-align-last: center;
    }

</style>

